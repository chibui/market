<div class="container">

<p id="notice"><%= notice %></p>

<h1>Shops</h1>

<div class="row">
  <div class="col-sm-3">
    <th>Shop Name</th>
  </div>
  <div class="col-sm-3">
    <th>Email</th>
  </div>
  <div class="col-sm-3">
    <th></th>
  </div>
</div>

<% @users.each do |user| %>
  <div class="row">
    <% if user.role.id == 2 %>
    <div class="col-sm-3">
      <%= user.name %>
    </div>
    <div class="col-sm-3">
      <%= user.email %>
    </div>
    <div class="col-sm-3">
      <%= link_to 'View', user %>
    </div>

      <%= link_to 'Message me!', conversations_path(sender_id: current_user.id, recipient_id: user), method: 'post'%>
    <% end %>
  </div>
<% end %>

<br>

<%= link_to 'Back', :back %>
</div>
