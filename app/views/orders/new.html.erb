
<div class="order_form">
  <fieldset>
    <legend>Please check your order</legend>
      <h2>Your Cart</h2>

        <table>
            <thead>
              <tr>
                <th>QTY</th>
                <th>Item</th>
                <th>Seller</th>
                <th>Price</th>
              </tr>
            </thead>
          <%= render(@cart.line_items) %>

          <tr class="total_line">
            <td colspan="3">Total</td>
            <td class="total_cell"><%= number_to_currency(@cart.total_price) %></td>
          </tr>

        </table>
        <%= render 'form', order:@order%>
  </fieldset>
</div>

<%= @cart.total_price %>
