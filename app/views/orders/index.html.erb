<p id="notice"><%= notice %></p>

<h1>Orders</h1>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <% if current_user.role_id == 2 %>
            <th>Buyer</th>
          <% end %>
          <th>Shipped</th>
          <th>Received</th>
          <% if current_user.role_id == 3 %>
          <th>Buyer</th>
          <% end %>
          <th colspan="6"></th>
        </tr>
      </thead>

      <tbody>
        <% if current_user.role_id ==  2 %>
          <%= render 'orders/seller_view' %>
        <% elsif current_user.role_id == 1 %>
          <%= render 'orders/buyer_view' %>
        <% elsif current_user.role_id == 3 %>
          <%= render 'orders/admin_view' %>
        <% end %>
      </tbody>
    </table>

<br>

<%= link_to 'Back', root_path %>
