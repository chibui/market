<p id="notice"><%= notice %></p>

<p>
  <% if @user.image.thumb.url.present? %>
  <strong>Image:</strong>
  <%= image_tag @user.image.thumb.url %>
  <% end %>
</p>

<% if current_user.role_id == 3 %>
<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Role:</strong>
  <%= @user.role.name %>
</p>

<p>
  <strong>Joined on:</strong>
  <%= @joined_on %>
</p>

<p>
  <strong>Last logged in on:</strong>
  <%= @last_login %>
</p>

<p>
  <strong>No. times logged in:</strong>
  <%= @user.sign_in_count %>
</p>

<% end %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Origin</th>
      <th>Min order</th>
      <th>Price</th>
      <th>Seller</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
  <% @user.items.each do |item| %>
    <tr>
      <td><%= link_to item.name, item %></td>
      <td><%= item.description %></td>
      <td><%= item.origin %></td>
      <td><%= item.min_order %></td>
      <td><%= item.price %></td>
      <td><%= link_to item.user.name%></td>
      <!-- Use the can? (cancancan) method to check users permission and react accordingly-->
      <% if current_user.id == item.user_id %>
        <td>
          <% if can? :update, item %>
            <%= link_to 'Edit', edit_item_path(item) %>
          <% end %>
        </td>
        <td>
          <% if can? :destroy, item %>
            <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      <% end %>
    </tr>
    <% end %>
</tbody>
</table>
<% if current_user.id == @user_id %>
<%= link_to 'Edit', edit_user_path(@user) %>
<% end %>
<%= link_to 'Back', :back %>
